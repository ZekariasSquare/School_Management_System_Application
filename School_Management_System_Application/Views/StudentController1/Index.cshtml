@model List<School_Management_System_Application.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Student List</h1>

<div class="col-4 p-0 justify-content-end">
    <form asp-controller="StudentController1" asp-action="Index">
        <span class="btn-group">
            <input class="form-control" type="text" name="Search" placeholder="Search Student By ID"/>
            <input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Search"/>
        </span>
    </form>

</div>
<br />

<a asp-action="Registeration" class="btn btn-success">Add New student </a>
<div class="container row p-0 m-0">
    <table class="table table-striped border ">
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender </th>
            <th>Phone Number</th>
            <th>Roll Number</th>
            <th>Date Of Birth</th>
            <th>Username</th>
            <th>Email</th>
            <th>Class Name</th>
            <th></th>
        </tr>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Student_ID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Gender</td>
                <td>@student.Phone_No</td>
                <td>@student.Roll_No</td>
                <td>@student.DOB</td>
                <td>@student.username</td>
                <td>@student.Email</td>
                <td>@student.ClassId</td>
               <td>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info">Detail</a>
                    <a asp-action="Edit"asp-route-id="@student.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Delete"asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>