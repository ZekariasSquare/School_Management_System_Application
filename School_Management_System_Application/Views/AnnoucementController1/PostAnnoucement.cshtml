@model School_Management_System_Application.Models.Annoucement

@{
    ViewData["Title"] = "PostAnnoucement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr />
<h2>Post Annoucement</h2>
<form asp-action="PostAnnoucement" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Annoucement_Description">Annoucement Description</label>
            <input type="text" class="form-control" id="Annoucement_Description" name="Annoucement_Description" placeholder="Annoucement Description">
        </div>
        
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Annoucement_Date">Posted Date</label>
            <input type="date" class="form-control" id="Annoucement_Date" name="Annoucement_Date" placeholder="Posted Date">
        </div>
       
    </div>
   <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Annoucements">Annoucement</label>
            <textarea class="form-control" id="Annoucements" name="Annoucements" placeholder="Annoucement"> </textarea>
        </div>
        
    </div>
    
    
           <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
</form>


