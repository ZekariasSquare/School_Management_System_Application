@model List<School_Management_System_Application.Models.Teacher>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<<h1>List</h1>

<a asp-action="AddTeacher" class="btn btn-success">Add New Teacher </a>
<div class="container row p-0 m-0">
    <table class="table table-striped border ">
        <tr>
            <th>Id</th>
            <th>First name </th>
            <th>Last name</th>
            <th>gender</th>
            <th>Phone number</th>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
        @foreach(var teacher in Model)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.fname</td>
                <td>@teacher.lname</td>
                <td>@teacher.gender</td>
                <td>@teacher.Phone_no</td>
                <td>@teacher.username</td>
                <td>@teacher.email</td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-info">Detail</a>
                    <a asp-action="Edit"asp-route-id="@teacher.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Delete"asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
