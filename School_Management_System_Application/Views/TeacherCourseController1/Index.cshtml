@model IEnumerable<School_Management_System_Application.Models.TeacherCourse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Teacher Course</h1>

<p>
    <a asp-action="AddTeacherCourse" class="btn btn-success">Add Teacher Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TcId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.TcId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TcId" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TcId"class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TcId"class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
